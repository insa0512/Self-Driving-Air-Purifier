<resources>
    <!-- Base application theme. -->
    <style name="Theme.AirPurifier" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_green1</item>
        <item name="colorPrimaryVariant">@color/app_green2</item>
        <item name="colorOnPrimary">@color/app_white1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue1</item>
        <item name="colorSecondaryVariant">@color/app_blue2</item>
        <item name="colorOnSecondary">@color/app_black1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
    </style>
</resources>